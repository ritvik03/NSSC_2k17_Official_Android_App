<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Introduction"
                android:textStyle="italic"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mag_intro"
                android:background="#9004517e"
                android:padding="10dp"
                android:layout_margin="20dp"
                android:textColor="#ccffffff"
                android:id="@+id/textView14" />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prizes worth INR 30,000"
                android:textStyle="bold"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Problem Statement"
                android:textStyle="italic"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:id="@+id/ps_col"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mag_ps"
                android:background="#9004517e"
                android:layout_marginBottom="15dp"
                android:padding="10dp"
                android:layout_margin="20dp"
                android:textColor="#ccffffff"
                android:id="@+id/textView15" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rules"
                android:textStyle="italic"
                android:textSize="30sp"
                android:textColor="#ffffff"
                android:layout_margin="20dp"
                android:id="@+id/rule_col"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mag_rules"
                android:background="#9004517e"
                android:padding="10dp"
                android:layout_margin="20dp"
                android:textColor="#ccffffff"
                android:id="@+id/textView16" />


            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:text="Round One"
                android:textStyle="italic"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mag_r1"
                android:textColor="#ccffffff"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#9004517e"
                android:layout_below="@+id/textView13"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView17" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Round Two"
                android:textStyle="italic"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:text="In round two the shape of the objects is changed from cuboidal to hexagonal, pentagonal and triangular and so have the shapes of holes in the wall. All other rules are the same for both the rounds."
                android:textColor="#ccffffff"
                android:background="#9004527e"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judging Parameters"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:layout_marginTop="17dp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scoring Points"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:id="@+id/sc2_col"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/textView18"
                android:layout_alignLeft="@+id/textView19"
                android:layout_alignStart="@+id/textView19"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mag_sc"
                android:textColor="#ccffffff"
                android:layout_margin="20dp"
                android:background="#9004517e"
                android:layout_below="@id/sc_col"
                android:padding="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penalties"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:layout_alignLeft="@+id/textView19"
                android:layout_alignStart="@+id/textView19"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mag_pen"
                android:layout_margin="20dp"
                android:textColor="#ccffffff"
                android:background="#9004517e"
                android:padding="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area Specification"
                android:textColor="#ffffff"
                android:layout_margin="20dp"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mag_area"
                android:padding="10dp"
                android:layout_margin="20dp"
                android:textColor="#ccffffff"
                android:background="#9004517e"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/i4"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/i5"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/i6"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/i7"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bot Specifications"
                android:textStyle="italic"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:text="@string/mag_bot"
                android:textColor="#ccffffff"
                android:background="#9004517e"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text=""/>




        </LinearLayout>

    </ScrollView>

</RelativeLayout>
