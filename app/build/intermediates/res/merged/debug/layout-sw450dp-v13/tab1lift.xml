<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduction"
        android:textStyle="italic"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lift_intro"
        android:background="#9004517e"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:textColor="#ccffffff"
        android:id="@+id/textView14" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prizes worth INR 20,000"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Problem Statement"
        android:textStyle="italic"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:id="@+id/ps_col"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lift_ps"
        android:background="#9004517e"
        android:layout_marginBottom="15dp"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:textColor="#ccffffff"
        android:id="@+id/textView15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rocket Specifications"
            android:textStyle="italic"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:layout_margin="20dp"
            android:id="@+id/roc_spec_lift"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/roc_spec"
            android:background="#9004517e"
            android:padding="10dp"
            android:layout_margin="20dp"
            android:textColor="#ccffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rules"
        android:textStyle="italic"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_margin="20dp"
        android:id="@+id/rule_col"
        android:layout_gravity="center_horizontal"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lift_rule"
        android:background="#9004517e"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:textColor="#ccffffff"
        android:id="@+id/textView16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task"
            android:textStyle="italic"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:layout_margin="20dp"
            android:id="@+id/task_lift"
            android:layout_gravity="center_horizontal"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lift_task"
            android:background="#9004517e"
            android:padding="10dp"
            android:layout_margin="20dp"
            android:textColor="#ccffffff" />





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Judging Parameters"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:layout_marginTop="17dp"
        android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:text="Round One"
            android:textStyle="italic"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lift_sc_r1"
        android:textColor="#ccffffff"
        android:layout_margin="20dp"
        android:background="#9004517e"
        android:padding="10dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Round Two"
        android:textStyle="italic"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.Top 16 teams of round 1 will advance to round 2.\n\n2.The problem statement of round 2 of lift off will be disclosed on the day of the event."
        android:textColor="#ccffffff"
        android:layout_margin="20dp"
        android:background="#9004517e"
        android:padding="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Certification Policy"
        android:textStyle="italic"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:text="@string/lift_cert"
        android:textColor="#ccffffff"
        android:background="#9004517e"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text=""/>

</LinearLayout>
</ScrollView>
</RelativeLayout>