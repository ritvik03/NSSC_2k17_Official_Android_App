<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.nssc.test3.Developer"
    tools:showIn="@layout/activity_developer"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Help us to make the App better"
        android:textColor="#ccffffff"
        android:textSize="25sp"
        android:padding="10dp"
        android:background="#30ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report any suggestions or bugs to :"
        android:textColor="#ccffffff"
        android:textSize="18sp"
        android:padding="10dp"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="46dp" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ritvik Pandey"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:paddingLeft="5dp"
        android:gravity="center_horizontal"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="#20ffffff"
        android:layout_below="@+id/textView26"
        android:layout_marginTop="55dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2nd Year Space and Technology Student\'s Society\nIIT Kharagpur"
        android:textColor="#ffffff"
        android:padding="10dp"
        android:layout_below="@+id/textView27"
        android:textSize="17sp"
        android:gravity="center_horizontal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/textView27"
        android:layout_alignStart="@+id/textView27" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView28"
        android:text="Sub-Head | NSSC"
        android:gravity="center_horizontal"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mail"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:background="#cfe94a3f"
        android:layout_alignTop="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:onClick="mail_ritvik"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:layout_below="@+id/textView29"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
