<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.nssc.test3.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="@drawable/background">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="161dp"
                android:src="@drawable/nsscname"
                android:layout_weight="0.4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Register"
                    android:layout_marginTop="10dp"
                    android:onClick="register_page"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.1"
                android:background="#10ffffff"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/abtus"
                    android:id="@+id/imageView2" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About Us"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:padding="10dp"
                    android:id="@+id/textView"
                    android:layout_alignBaseline="@+id/button2"
                    android:layout_alignBottom="@+id/button2"
                    android:layout_toRightOf="@+id/imageView2"
                    android:layout_toEndOf="@+id/imageView2" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:onClick="fab_home"
                    android:id="@+id/button2"
                    android:layout_alignParentTop="true"
                    android:layout_alignLeft="@+id/imageView2"
                    android:layout_alignStart="@+id/imageView2"
                    android:layout_alignRight="@+id/textView"
                    android:layout_alignEnd="@+id/textView" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_weight="0.1"
                android:padding="5dp"
                android:background="#20ffffff">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/exhbition"
                    android:id="@+id/imageView4"
                    android:layout_marginLeft="100dp"
                    android:layout_marginStart="100dp"
                    android:layout_alignTop="@+id/textView32"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exhibitions"
                    android:padding="10dp"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView4"
                    android:layout_toEndOf="@+id/imageView4"
                    android:id="@+id/textView32" />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:onClick="toExhibition2"/>

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:layout_marginBottom="50dp">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:columnCount="3"
                    android:foregroundGravity="center_horizontal"
                    android:rowCount="4">

                    <ImageButton
                        android:layout_column="0"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:padding="10dp"
                        android:src="@drawable/gstlec"
                        android:background="#00ffffff"
                        android:onClick="gotoGuest"
                        android:layout_width="wrap_content" />

                    <ImageButton
                        android:layout_height="105dp"
                        android:layout_column="1"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:src="@drawable/event_icon"
                        android:onClick="gotoEve"
                        android:background="@android:color/transparent"
                        android:layout_width="114dp" />


                    <ImageButton
                        android:layout_height="match_parent"
                        android:layout_column="2"
                        android:layout_row="0"
                        android:layout_rowWeight="1"
                        android:padding="10dp"
                        android:src="@drawable/workshop"
                        android:background="@android:color/transparent"
                        android:onClick="gotoWork"
                        android:layout_width="100dp" />

                    <TextView
                        android:layout_column="0"
                        android:layout_row="1"
                        android:layout_rowWeight="0.1"
                        android:gravity="center_horizontal"
                        android:text="Guest Talks"
                        android:textColor="#ffffff"
                        android:layout_width="127dp" />

                    <TextView
                        android:layout_column="1"
                        android:layout_row="1"
                        android:layout_rowWeight="0.1"
                        android:gravity="center_horizontal"
                        android:text="Events"
                        android:textColor="#ffffff"
                        android:layout_width="116dp" />

                    <TextView
                        android:layout_column="2"
                        android:layout_row="1"
                        android:layout_rowWeight="0.1"
                        android:gravity="center_horizontal"
                        android:text="Workshops"
                        android:textColor="#ffffff"
                        android:layout_width="98dp"
                        android:layout_height="wrap_content" />


                    <ImageButton
                        android:layout_column="0"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:padding="25dp"
                        android:src="@drawable/schedule"
                        android:background="@android:color/transparent"
                        android:onClick="gotoSch"
                        android:layout_width="119dp" />

                    <ImageButton
                        android:layout_height="match_parent"
                        android:layout_column="1"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:padding="15dp"
                        android:src="@drawable/direction"
                        android:background="@android:color/transparent"
                        android:onClick="gotoDir"
                        android:layout_width="115dp" />

                    <ImageButton
                        android:layout_height="match_parent"
                        android:layout_column="2"
                        android:layout_row="2"
                        android:layout_rowWeight="1"
                        android:padding="20dp"
                        android:src="@drawable/cont"
                        android:onClick="gotoContacts"
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content" />

                    <TextView
                        android:layout_column="0"
                        android:layout_row="3"
                        android:layout_rowWeight="0.1"
                        android:gravity="center_horizontal"
                        android:text="Schedule"
                        android:textColor="#ffffff"
                        android:layout_width="125dp" />

                    <TextView
                        android:layout_column="1"
                        android:layout_row="3"
                        android:layout_rowWeight="0.1"
                        android:paddingRight="9dp"
                        android:gravity="center_horizontal"
                        android:text="Directions"
                        android:textColor="#ffffff"
                        android:layout_width="114dp" />

                    <TextView
                        android:layout_column="2"
                        android:layout_row="3"
                        android:layout_rowWeight="0.1"
                        android:gravity="center_horizontal"
                        android:text="Contact us"
                        android:textColor="#ffffff"
                        android:layout_width="97dp" />


                </GridLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
